<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Diplomata Belgica - {{ page_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.1.2/css/all.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
        {{ encore_entry_link_tags('main') }}
    {% endblock %}
    
    <link rel="manifest" href="{{ asset('build/manifest.json') }}"/>

    <meta name="msapplication-TileColor" content="#ffffff"/>
    <meta name="msapplication-TileImage" content="{{ asset('build/static/icons/ms-icon-144x144.png') }}"/>
    <meta name="theme-color" content="#ffffff"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="The Diplomata Belgica Team">

    <meta property="og:title" content="Diplomata Belgica">
    <meta property="og:type" content="website" />
    <meta property="og:description" content="">
    <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('build/static/images/logo_square.png') }}">
    <meta property="og:url" content="{{ app.request.uri }}">
</head>
<body class="{% block body_class %}{% endblock %}">

    {# HEADER #}
    <header class="container-xl page__header">
        {% block header %} 
                <div class="row pageheader pbottom-large">
                    <div class="col-12">
                        <!-- NAVBAR -->
                        {{ include('blocks/navbar.html.twig') }}
                    </div>
                </div>
        {% endblock %}
    </header>

    {# CONTENT #}
    <main class="container-xl page__content">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div role="alert" class="alert alert-dismissible alert-{{ type }}">
                        <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        {% block main %}{% endblock %}
    </main>

    {# FOOTER #}
    <footer class="container-xl page__footer">
            <div class="container-fluid padding-default bg-tertiary">
                <div class="row">
                    <div class="col-12 col-sm-9">

                    <h1 class="logo">
                        <b>Diplomata</b>Belgica
                    </h1>
            
                    <p class="sub-title">
                        Les sources diplomatiques des Pays-Bas méridionaux au Moyen Âge<br>
                        The Diplomatic Sources from the Medieval Southern Low Countries
                    </p>
                    </div>

                    <div class="col-12 col-sm-3">
                        <div class="row justify-content-end">
                            <div class="col-3 col-sm-8 col-md-6 col-lg-3">
                                <a target="_blank" href="https://commissionroyalehistoire.be/">
                                    <img src="{{ asset('build/static/images/logo-kcg-bw.png') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-12 ptop-small">
                                <p class="issn">
                                    ISSN: 2295-5011<br>
                                    Depuis 2015<br>
                                    <br>
                                    Commission royale d'Histoire<br>
                                    Koninklijke Commissie voor Geschiedenis<br>
                                    Palais des Acad&eacute;mies<br>
                                    Rue Ducale, 1 | B-1000 Bruxelles | Belgique<br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
            <!-- Copyright -->
            <div class="bg-primary text-light text-center p-3">
                © 2025 Copyright:
                <a target="_blank" class="text-light" href="https://www.ugent.be/">Ghent University</a>
            </div>
            <div class="container-fluid padding-default">



            </div>
    </footer>
    {% block javascript %}
        {{ encore_entry_script_tags('main') }}
    {% endblock %}
</body>
</html>
