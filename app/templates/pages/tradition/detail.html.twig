{# Remove comments to add a view app to the template #}
{% extends 'base.html.twig' %}

{% set page_title %}{{ 'Tradition'|trans }}{% endset %}

{% block body_class %}layout--fullscreen layout--compact{% endblock %}

{% block main %}
    <tradition-view-app id="tradition-view-app"
                   init-urls="{{ urls }}"
                   init-data="{{ data }}"
    />
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('tradition-view') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('tradition-view') }}
{% endblock %}
