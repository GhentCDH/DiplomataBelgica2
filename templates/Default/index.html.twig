{% extends 'base.html.twig' %}

{% block title %}Diplomata Belgica - Welcome{% endblock %}

{% block header %} 
<div class="pageheader">
    <div class="row"> 

        <!-- IMG -->
        <div class="d-none d-md-block col-sm-2 dibe-logo">
            <img class="img-fluid" src="{{ asset('build/static/images/miniatuur.png') }}" alt="" height="120px"> 
        </div>
        <div class="col-12 col-md-10">

            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-light bg-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('default') }}">
                        <h1 
                        class="logo margin-none"><b>Diplomata</b>Belgica 
                        {% if app.environment != 'prod' %}
                            <span class="text-danger">
                                    [{{ app.environment }}]
                                </span>
                        {% endif %}
                        </h1>  
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                        <li class="nav-item ">
                            <a class="nav-link {{ app.request.get('_route') == 'charter_search' ? 'active' }}" href="{{ path('charter_search') }}">
                                Search
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'about' ? 'active' }}" href="{{ path('about') }}">
                                About
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'copyright' ? 'active' }}" href="{{ path('copyright') }}">
                                Copyright
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'contact' ? 'active' }}" href="{{ path('contact') }}">
                                Contact
                            </a>
                        </li>
                    </ul>

                </div>
                </div>
            </nav>
        </div>
    </div>
</div>
{% endblock %}

