<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> {% block title %}{% endblock %} </title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.1.2/css/all.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">        {{ encore_entry_link_tags('main') }}
    {% endblock %}
    
    <link rel="manifest" href="{{ asset('build/manifest.json') }}"/>

    <meta name="msapplication-TileColor" content="#ffffff"/>
    <meta name="msapplication-TileImage" content="{{ asset('build/static/icons/ms-icon-144x144.png') }}"/>
    <meta name="theme-color" content="#ffffff"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="The Diplomata Belgica Team">

    <meta property="og:title" content="Diplomata Belgica">
    <meta property="og:type" content="website" />
    <meta property="og:description" content="">
    <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('build/static/images/logo_square.png') }}">
    <meta property="og:url" content="{{ app.request.uri }}">
</head>
<body class="{% block body_class %}{% endblock %}">

    {# HEADER #}
    <div class="container-xl">
        {% block header %} 
            <div class="pageheader">
                <div class="row pbottom-large"> 
                    <div class="col-12">
                        <!-- NAVBAR -->
                        <nav class="navbar navbar-expand-lg navbar-light bg-tertiary">
                            <div class="container-fluid">
                                <a class="navbar-brand" href="{{ path('default') }}">
                                    <h1 
                                    class="logo margin-none"><b>Diplomata</b>Belgica 
                                    {% if app.environment != 'prod' %}
                                        <span class="text-danger">
                                                [{{ app.environment }}]
                                            </span>
                                    {% endif %}
                                    </h1>  
                                </a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <i class="fa fa-bars"></i>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    
                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'charter_search' ? 'active' }}" href="{{ path('charter_search') }}">
                                            Search
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'about' ? 'active' }}" href="{{ path('about') }}">
                                            About
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'copyright' ? 'active' }}" href="{{ path('copyright') }}">
                                            Copyright
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.get('_route') == 'contact' ? 'active' }}" href="{{ path('contact') }}">
                                            Contact
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div> 

    {# CONTENT #}
    <div class="container-xl page__content">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div role="alert" class="alert alert-dismissible alert-{{ type }}">
                        <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        {% block content %}{% endblock %}
    </div>

    {# FOOTER #}
    <div class="container-xl">
        <footer class="">
            <div class="container-fluid padding-default bg-tertiary">
                <div class="row">
                    <div class="col-12 col-sm-9">

                    <h1 class="logo">
                        <b>Diplomata</b>Belgica
                    </h1>
            
                    <p class="sub-title">
                        Les sources diplomatiques des Pays-Bas méridionaux au Moyen Âge<br>
                        The Diplomatic Sources from the Medieval Southern Low Countries
                    </p>
                    </div>

                    <div class="col-12 col-sm-3">
                        <div class="row justify-content-end">
                            <div class="col-3 col-sm-8 col-md-6 col-lg-3">
                                <a href="http://commissionroyalehistoire.be/">
                                    <img src="{{ asset('build/static/images/logo-kcg-bw.png') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-12 ptop-small">
                                <p class="issn">
                                    ISSN: 2295-5011<br>
                                    Depuis 2015<br>
                                    <br>
                                    Commission royale d'Histoire<br>
                                    Koninklijke Commissie voor Geschiedenis<br>
                                    Palais des Acad&eacute;mies<br>
                                    Rue Ducale, 1 | B-1000 Bruxelles | Belgique<br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
            <!-- Copyright -->
            <div class="bg-primary text-light text-center p-3">
                © 2022 Copyright:
                <a class="text-light" href="https://www.ugent.be/">Ghent University</a>
            </div>
            <div class="container-fluid padding-default">

                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="row justify-content-center">
                            <div class="col-1 d-flex align-items-end">
                                <a href="https://www.ugent.be/">
                                    <img src="{{ asset('build/static/images/logo-ugent.png') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-1 d-flex align-items-end">
                                <a href="http://www.belspo.be/belspo/index_en.stm">
                                    <img src="{{ asset('build/static/images/logo-belspo.jpeg') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                <img src="{{ asset('build/static/images/logo-hercules.png') }}" class="w-100"/>
                            </div>
                            <div class="col-1 d-flex align-items-end">
                                <a href="https://www.fwo.be/">
                                    <img src="{{ asset('build/static/images/logo-fwo.png') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-1 d-flex align-items-end">
                                <a href="https://www.ugent.be/pirenne/en">
                                    <img src="{{ asset('build/static/images/logo-pirenne.png') }}" class="w-100"/>
                                </a>
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                <a href="https://ddcm.ugent.be/">
                                    <img src="{{ asset('build/static/images/logo-ddcm.png') }}" class="w-100"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </footer>
    </div>
    {% block javascript %}
        {{ encore_entry_script_tags('main') }}
    {% endblock %}
</body>
</html>
